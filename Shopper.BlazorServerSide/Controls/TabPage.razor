

@if (Parent.SelectedTabPage == this)
{
    @ChildContent
}

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [CascadingParameter]
    public TabControl Parent { get; set; }

    [Parameter]
    public string Caption { get; set; }

    protected override void OnInitialized()
    {
        if (Parent == null)
        {
            throw new ArgumentNullException( nameof(Parent), "TabPage must exists within TabControl");
        }

        Parent.AddPage(this);


        base.OnInitialized();

    }



}
